- locals[:subtitle] = "as in #{year} i had #{user.beers_for_year(year).count} beers, and i started drinking #{user.first_beer(year).strftime("%d.%m %H:%M")}, averaging #{user.avg_beers(year).round(2)} beers a day"

.l-content
  - user.months_drinking(year).each_slice(3) do | months |
    .boxes-tables.pure-g
      - months.each do | month |
        = haml(:_box, locals: {month: month, stat: user.get_stats_for_month(year, month)})
