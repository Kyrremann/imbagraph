!!! 5
%html
  %head
    %title= "Imbagraph"
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:crossorigin => "anonymous", :href => "https://unpkg.com/purecss@1.0.0/build/pure-min.css", :integrity => "sha384-", :rel => "stylesheet"}/
    %link{:href => "https://unpkg.com/purecss@1.0.0/build/grids-responsive-min.css", :rel => "stylesheet"}/
    %link{:href => "/css/imbagraph.css", :rel => "stylesheet"}/

  %body
    - user = locals['user']
    .alert
      = styled_flash
    .banner
      = haml(:_menu, :locals => {'username' => user.username})
      %h1.banner-head
        I might be an alcoholic
        %br
        As I have had #{user.beers.count} beers since #{user.first_beer.to_date.strftime("%d.%m.%Y")}, averaging #{user.avg_beers.round(2)} beers a day

    .l-content
      - user.years_drinking.each_slice(3) do | group |
        .boxes-tables.pure-g
          - group.each do | year |
            - stat = user.get_stats_for_year(year)
            = haml(:_box, :locals => {'year' => year, 'stat' => stat, 'user' => locals['user']})

    %p{:style => "text-align: center"}
      Site and content subject to sudden change due to miscalculated Balmer's peak
