%html
  %head
    = haml(:_header, :locals => {'title' => 'Imbagraph'})

  %body
    .banner
      %h1.banner-head
        You might be an alcoholic
        %br
        and we are looking forward tasting your stats

    %div{:style => "text-align: center"}
      %h1
        Welcome
    .pure-g
      .pure-u-1-3
